<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/common_margin_right_middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/seller_header_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="kisstherain"
                android:textColor="@color/blue_sky"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textsize_xmiddle" />

            <TextView
                android:id="@+id/dispaly_pics_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@null"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textsize_xmiddle" />
        </LinearLayout>

    </LinearLayout>

    <com.ktr.ui.widget.DisplayPicsView
        android:id="@+id/dispaly_pics_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_alpha">

        <ImageView
            android:id="@+id/img01"
            style="@style/display_pic_img_style" />

        <ImageView
            android:id="@+id/img02"
            style="@style/display_pic_img_style" />

        <ImageView
            android:id="@+id/img03"
            style="@style/display_pic_img_style" />

        <ImageView
            android:id="@+id/img04"
            style="@style/display_pic_img_style" />

        <ImageView
            android:id="@+id/img05"
            style="@style/display_pic_img_style" />

        <ImageView
            android:id="@+id/img06"
            style="@style/display_pic_img_style" />

        <ImageView
            android:id="@+id/img07"
            style="@style/display_pic_img_style" />

        <ImageView
            android:id="@+id/img08"
            style="@style/display_pic_img_style" />

        <ImageView
            android:id="@+id/img09"
            style="@style/display_pic_img_style" />

    </com.ktr.ui.widget.DisplayPicsView>

</LinearLayout>