<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_right_large">

        <ImageView
            android:id="@+id/accout_header_icon_imageView"
            android:layout_width="@dimen/header_width"
            android:layout_height="@dimen/header_height"
            android:src="@mipmap/seller_header_icon"/>

        <TextView
            android:id="@+id/title_textView"
            style="@style/drawer_menu_header_text_value_style"
            android:layout_toRightOf="@id/accout_header_icon_imageView"
            android:text="kisstherain"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/drawer_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
