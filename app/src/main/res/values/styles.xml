<resources>

    <!-- Base application theme. -->
    <style name="AppBaseThemektr" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/maker_title_color</item>
        <!-- Status bar color-->
        <item name="colorPrimaryDark">@color/maker_title_color</item>
        <item name="colorAccent">@color/maker_title_color</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="drawerArrowStyle">@style/AppTheme.MyDrawerArrowStyle</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="actionModeShareDrawable">@mipmap/abs__ic_menu_share_holo_dark</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="android:Widget.ActionBar">
        <!-- 半透明背景，需要开启actionbar悬浮 -->
        <item name="android:background">@color/maker_title_color</item>
        <item name="android:height">55dp</item>
    </style>

    <style name="AppTheme.MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">#FFFFFF</item>
    </style>
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">

        <item name="searchIcon">@mipmap/abs__ic_search</item>
        <!--
    Background for the search query section (e.g. EditText)
    <item name="queryBackground">...</item>
    Background for the actions section (e.g. voice, submit)
    <item name="submitBackground">...</item>
    Close button icon
    <item name="closeIcon">...</item>
    Search button icon
    <item name="searchIcon">...</item>
    Go/commit button icon
    <item name="goIcon">...</item>
    Voice search button icon
    <item name="voiceIcon">...</item>
    Commit icon shown in the query suggestion row
    <item name="commitIcon">...</item>
    Layout for query suggestion rows
    <item name="suggestionRowLayout">...</item>
        -->

    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="action_bottom_tag_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:background">@null</item>
    </style>

    <style name="goods_search_filter_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="goods_search_filter_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_xmiddle</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="my_tool_bar_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_xmiddle</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="personal_gird_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">1dip</item>
    </style>

    <style name="personal_gird_layout_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_xmiddle</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>

    <style name="confirm_order_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="personal_info_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="personal_info_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/textsize_xmiddle</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="personal_info_text_value_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_xmiddle</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="comment_check_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/gray_alpha</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="drawer_menu_text_value_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/textsize_middle</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_right_middle</item>
    </style>

    <style name="drawer_menu_header_text_value_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/textsize_xmiddle</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_right_middle</item>
    </style>

    <!--android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:textSize="@dimen/textsize_middle"
    android:text="测试"
    android:layout_marginLeft="@dimen/common_margin_right_middle"-->

</resources>
